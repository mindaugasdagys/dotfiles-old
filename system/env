# Environment

# Ensure dotfiles dotfiles [or in other setups ~/bin] directory is loaded first
export PATH="~/dotfiles:$PATH"

# For fasd to work
eval "$(fasd --init auto)"

# Initialize rbenv
# eval "$(rbenv init -)"

# Prefer US English and use UTF-8
export LC_ALL="en_US.UTF-8"
export LANG="en_US"

